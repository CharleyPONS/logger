{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": true,
    "experimentalDecorators":true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "suppressImplicitAnyIndexErrors": false,
    "lib": [
      "es6",
      "dom"
    ],
    "rootDir": "src/",
    "outDir": "lib/",
    "declaration": true,
    "declarationDir": "lib/",
    "noResolve": false,
    "types":[
      "node",
      "chai",
      "mocha",
      "sinon",
      "sinon-chai",
      "chai-as-promised"
    ]
  },

  "exclude": [
    "node_modules",
    "test",
    "dts",
    "lib"
  ]
}